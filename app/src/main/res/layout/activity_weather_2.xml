<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/midnight_bloom_size"
    android:gravity="center"
    android:id="@+id/rl1">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl2"
        android:gravity="center">


        <ImageView
            android:id="@+id/wIcon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/sunny" />

        <TextView
            android:id="@+id/wText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/wIcon"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="샘플"
            android:textColor="#ffffff"
            android:textSize="50dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/rl2"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/up"
            android:layout_alignBottom="@+id/highTemp"
            android:layout_marginBottom="10dp"
            android:id="@+id/up"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/up"
            android:textSize="45dp"
            android:textColor="#ffffff"
            android:text="99º"
            android:layout_marginLeft="10dp"
            android:id="@+id/highTemp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/down"
            android:layout_alignBottom="@+id/lowTemp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/highTemp"
            android:layout_marginLeft="30dp"
            android:id="@+id/down"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="45dp"
            android:textColor="#ffffff"
            android:layout_toRightOf="@+id/down"
            android:text="0º"
            android:layout_marginLeft="10dp"
            android:id="@+id/lowTemp"
            android:textStyle="bold"/>
    </RelativeLayout>


</RelativeLayout>